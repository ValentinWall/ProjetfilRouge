{% extends "base.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block body %}
{% include "_header.html.twig" %}
<main>
    <div class="container-fluid">
    <!--Header card-->
        <div class="mt-5 row">
            <h1 class="text-center">Accueil</h1>
        </div>
        <br>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        {% for category in categories %}
        <div class="col">
            <div class="card">
                <div class="category-name">                
                    <h3 class="text-center "> {{ category.name }} </h3>
                </div>

            {% for product in category.product %}
                <div class="card-body">
                    
                    <div class="row">
                        <div class="col-3 img-product">
                            <img src="{{ asset('img/product/' ~ product.img) }}" class="text-center w-100" alt="{{ product.alt }}">
                        </div>
                        <h5 class="card-title col-7 text-center fs-5 text-uppercase">{{ product.name }}</h5>
                        <div class="col-2">    
                            <p class="card-text text-end"> 
                                {{ product.price|number_format(2, ',', ' ') }} â‚¬
                                <br>
                                {% if product.stock != 0 %}
                                <span class="fs-4 text-success">En stock</span>
                                {% else %}
                                <span class="fs-4 text-danger">Rupture de stock</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    <br>
                    <div class="row">
                        <div class="col-8">
                            <p class="fw-bold"> Nombre d'articles : <br> {{ product.stock }} restant(s)</p>
                        </div>
                        <div class="col-4 text-end">
                            <a href="#" class="col-4 btn bg-black text-white btn-sm">Ajouter<i class=""></i></a>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</div>
    
</main>
{% endblock %}
