{% extends 'baseAdmin.html.twig' %}

{% block title %} Créer un produit {% endblock %}

{% block body %} 

<h1 class="mb-5 text-center"> Créer un produit </h1>

{{ form_start(productForm) }}

<div class="row">
    <div class="col-8 offset-2">
        {{ form_row(productForm.category, {
            'label': 'Catégorie',
            'attr': {
                'placeholder': '--sélectionner--'
            }
        }) }}
    </div>
    <div class="col-4">
        {{ form_row(productForm.name, {
            'label': 'Nom du produit'
        }) }}
    </div>
</div>

<div class="row">
    <div class="col-3">
        {{ form_row(productForm.description, {
            'label': 'description'
        }) }}
    </div>
    <div class="col-3">
        {{ form_row(productForm.price, {
            'label': 'Prix (en €)',
            'attr': {
                'placeholder': 'Ex.: 123.45'
            }
        }) }}
    </div>
    <div class="col-3">
        {{ form_row(productForm.img)}}
    </div>
    <div class="col-3">
        {{ form_row(productForm.alt)}}
    </div>
</div>
<div class="row">
    <div class="col-8">
        {{ form_row(productForm.stock, {
            'label': 'Quantité',
            'attr': {
                'placeholder': 'Ex: 50'
            }
        })}}
    </div>
</div>

<div class="row">
    <div class="col-8 offset-2 my-3 text-end">
        <a href="{{ path('admin_product') }}" class="btn btn-outline-danger me-3">Annuler</a>
        <button class="btn btn-success">Créer</button>
    </div>
</div>

{{ form_end(productForm )}}

{% endblock %}