{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

{% include '_header.html.twig' %}

    <div class="container">

        <div class="row text-center my-5">
            <div class="col-12">
                <h1>Panier</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Quantité</th>
                            <th>Sous-total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for element in cart %}
                            <tr>
                                <td> {{ element.product.name }}</td>
                                <td> {{ element.product.price|number_format(2, ',', '') }} € </td>
                                <td> 
                                    <a href="#"><i class="bi bi-dash-square text-danger"></i></a>
                                    {{ element.quantity }} 
                                    <a href="{{ path('cart_add', {'id': element.product.id })}}"><i class="bi bi-plus-square text-success"></i></a>
                                </td> 
                                <td> {{ (element.product.price * element.quantity) |number_format(2, ',', '') }} €</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-center"> Votre panier est vide </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3" class="text-end">Total:</th>
                            <th class="text-end">€</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <div class="row text-end my-5">
            <div class="col-12">
                <a href="{{ path('cart_clear') }}" class="btn btn-danger"> Vider le panier </a>
                <a href="#" class="btn btn-success"> Valider le panier</a>
            </div>
        </div>

    </div>

{% endblock %}
